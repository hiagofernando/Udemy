package projetos;

import java.util.Scanner;

public class Exerc√≠ciosEstruturaSequencial1 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);

		double R, A, pi = 3.14157;
		
		R = sc.nextDouble();
		
		
		A = pi * R * R; 
		
		System.out.printf("A = %.4f%n", A);
		System.out.println();
		
		sc.close();
	}

}
